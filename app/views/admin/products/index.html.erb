<h1>Lista de Produtos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Marca</th>
    <th>Descrição</th>

  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to product.name, [:admin, product] %></td>
    <td><%= link_to product.mark, [:admin, product] %></td>
    <td><%= link_to product.description, [:admin, product] %></td>
    <td><%= link_to image_tag('edit.png'), edit_admin_product_path(product) %></td>
    <td><%= link_to image_tag('trash.png'), [:admin, product], :confirm => 'Deseja excluir esse produto?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Produto', new_admin_product_path %>
