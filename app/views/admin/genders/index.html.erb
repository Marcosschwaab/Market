<h1>Lista de Gêneros</h1>

<table>
  <tr>
    <th>Name</th>

  </tr>

<% @genders.each do |gender| %>
  <tr>
    <td><%= link_to gender.name, [:admin, gender]  %></td>
    <td><%= link_to image_tag('edit.png'), edit_admin_gender_path(gender) %></td>
    <td><%= link_to image_tag('trash.png'), [:admin, gender], :confirm => 'Deseja excluir esse gênero?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Gênero', new_admin_gender_path %>
